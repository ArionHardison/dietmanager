# DietManager Environment Configuration
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
APP_NAME=DietManager
APP_URL=http://localhost:3000

# API Configuration
API_URL=http://localhost:4000
API_PORT=4000

# Client Configuration
CLIENT_PORT=3000

# Vercel Deployment (Production)
VERCEL_URL=https://dietmanager.vercel.app
VERCEL_API_URL=https://dietmanager.vercel.app/api

# AI Features
AI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
NUTRITION_AI_ENABLED=true

# Database (Future Implementation)
# DATABASE_URL=postgresql://user:password@localhost:5432/dietmanager
# REDIS_URL=redis://localhost:6379

# Authentication (Future Implementation)
# JWT_SECRET=your_jwt_secret_here
# AUTH_PROVIDER=supabase
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key

# External APIs
# NUTRITIONIX_APP_ID=your_nutritionix_app_id
# NUTRITIONIX_APP_KEY=your_nutritionix_app_key
# EDAMAM_APP_ID=your_edamam_app_id
# EDAMAM_APP_KEY=your_edamam_app_key

# Payment Processing (Optional)
PAYMENT_ENABLED=false
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Service (Future Implementation)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@dietmanager.com

# Analytics
ANALYTICS_ENABLED=true
GA_TRACKING_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_MEAL_PLANNING=true
ENABLE_SHOPPING_LIST=true
ENABLE_RECIPE_GENERATOR=true
ENABLE_COMMUNITY_FEATURES=false
ENABLE_PREMIUM_FEATURES=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Development
DEBUG=false
HOT_RELOAD=true